<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.kh.lms.member.map.MemberMapper">
	<select id="memberSelectList"
		resultType="co.kh.lms.member.service.MemberVO">
		SELECT * FROM MEMBER
	</select>
	<select id="memberSelect"
		resultType="co.kh.lms.member.service.MemberVO">

		SELECT * FROM MEMBER WHERE MEMBER_ID = #{memberId}
		<if test="memberPassword != null ">
			and member_password = #{memberPassword}
		</if>
	</select>

	<insert id="memberInsert"
		parameterType="co.kh.lms.member.service.MemberVO">
		insert into member
		values(#{memberId},#{memberPassword},#{memberName},#{memberAge},#{memberGender},#{memberTel},#{memberAddress})
	</insert>

	<delete id="memberDelete"
		parameterType="co.kh.lms.member.service.MemberVO">
		delete from member where member_id = #{memberId}
	</delete>

	<update id="memberUpdate">

	</update>
</mapper>